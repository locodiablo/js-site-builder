{
  "name": "js-site-builder",
  "main": "server.js",
  "version": "0.0.1",
  "scripts": {
    "build": "npm run clean && npm run build-sass && npm run js-build && node ./scripts/build",
    "serve": "serve public -p 5000",
    "build-sass": "sass --style=compressed --no-charset src/scss/style.scss src/assets/css/style.css",
    "js-build": "concat -o ./src/assets/js/bundle.js ./src/assets/js/index.js",
    "js-build-OLD": "concat -o ./src/assets/js/bundle.js ./src/assets/js/jquery.js ./node_modules/bootstrap/dist/js/bootstrap.bundle.min.js ./src/assets/js/index.js",
    "clean": "rimraf public"
  },
  "dependencies": {
    "bootstrap": "5.0.2",
    "concat": "^1.0.3",
    "cpx": "^1.5.0",
    "directory-tree": "^3.3.1",
    "file-system": "^2.2.2",
    "fs-extra": "^8.1.0",
    "hoek": ">=4.2.1",
    "path": "^0.12.7",
    "rimraf": "^3.0.0",
    "sass": "^1.22.9",
    "serve": "^14.0.1"
  }
}
